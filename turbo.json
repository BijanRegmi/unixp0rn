{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["./apps/backend/dist/**", "./packages/types/dist/**"]
    },
    "start": {
      "dependsOn": ["build"]
    },
    "dev": {
      "dependsOn": ["@unixp0rn/types#build"],
      "persistent": true,
      "cache": false
    },
    "lint": {
      "cache": false
    }
  }
}
