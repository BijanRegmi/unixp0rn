{
  "$schema": "https://json.schemastore.org/tsconfig",
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowJs": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "composite": false,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  }
}
